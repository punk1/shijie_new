<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03FFFFFF"

    android:orientation="vertical">
    <include layout="@layout/bar_quan"/>

   <LinearLayout
       android:orientation="vertical"
       android:background="@drawable/shape_content_bg"

       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/detail_write_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="题目"
           android:layout_gravity="center"
           android:gravity="center"
           android:textSize="13sp"/>
       <TextView
           android:layout_marginTop="10dp"
           android:id="@+id/detail_write_content"
           android:lineSpacingExtra="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="fjlfsjfl。
fsfsdf。
fsdfdsfd。
fsdfsf
fsdfdf"
           android:layout_gravity="center"
           android:gravity="center"
           android:textSize="13sp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/shape_chuang_bg">
           <TextView
               android:id="@+id/detail_write_zhushi"
               android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:text="创作说明"
               android:textSize="10sp"
               android:layout_marginLeft="20dp"
               android:maxLines="2"
               android:ellipsize="end"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:orientation="horizontal">
          <LinearLayout
              android:layout_marginTop="10dp"
              android:layout_width="55dp"
              android:layout_height="20dp"
              android:orientation="horizontal">
              <ImageView
                  android:id="@+id/zan"
                  android:layout_width="15dp"
                  android:layout_height="15dp"
                  android:src="@mipmap/zan"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="20dp"
                  />
              <TextView
                  android:id="@+id/zan_text"
                  android:layout_width="15dp"
                  android:layout_height="15dp"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:text="1"
                  android:layout_marginLeft="5dp"
                  android:textSize="9sp"

                  />
          </LinearLayout>

           <LinearLayout
               android:layout_marginLeft="5dp"
               android:orientation="horizontal"
               android:layout_marginTop="10dp"
               android:layout_width="70dp"
               android:layout_height="20dp">
               <ImageView
                   android:id="@+id/commit"
                   android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:src="@mipmap/commit"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="20dp"
                   />
               <TextView
                   android:id="@+id/commit_text"
                   android:layout_width="20dp"
                   android:layout_height="15dp"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="5dp"
                   android:text="评论"
                   android:textSize="9sp"
                   android:maxLines="1"

                   />
           </LinearLayout>

           <TextView
               android:id="@+id/updata_text"
               android:layout_marginTop="45dp"
               android:layout_width="70dp"
               android:layout_height="25dp"
               android:textSize="9sp"
               android:text="2019-10-23"
               android:layout_marginLeft="160dp"/>

       </LinearLayout>

   </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ListView
           android:id="@+id/comment_list"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="50dp"
           >
       </ListView>
       <LinearLayout
           android:id="@+id/enroll"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_alignParentBottom="true">

           <LinearLayout

               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:gravity="center_horizontal">
               <ImageView

                   android:id="@+id/dian_zan"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@mipmap/zan"
                   android:layout_gravity="center_vertical"
                   />
               <TextView
                   android:id="@+id/dian_zan_text"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:text="点赞"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_marginLeft="5dp"

                   />

           </LinearLayout>
           <LinearLayout

               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:gravity="center_horizontal">
               <ImageView

                   android:id="@+id/comment"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@mipmap/zan"
                   android:layout_gravity="center_vertical"
                   />
               <TextView
                   android:id="@+id/comment_text"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:text="评论"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_marginLeft="5dp"

                   />

           </LinearLayout>


       </LinearLayout>

       <RelativeLayout
           android:id="@+id/rl_comment"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@color/white"
           android:visibility="gone"
           android:layout_alignParentBottom="true">

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#BBDEFB" />
           <ImageView
               android:id="@+id/hide"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/hide"
               />

           <TextView
               android:id="@+id/hide_down"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="隐藏"
               android:textSize="13sp"
               android:textColor="#FFECB3"
               android:layout_below="@+id/hide"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"/>
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="#B3E5FC"
               android:layout_toRightOf="@id/hide_down"
               android:layout_marginLeft="10dp"/>
           <EditText
               android:id="@+id/comment_content"
               android:hint="请输入评论"
               android:textSize="15sp"
               android:singleLine="true"
               android:layout_width="240dp"
               android:layout_centerVertical="true"
               android:layout_height="30dp"
               android:cursorVisible="true"
               android:background="@drawable/shape_edit_write"
               android:inputType="textMultiLine"
               android:layout_toRightOf="@id/hide_down"
               android:layout_marginLeft="20dp"/>

           <Button
               android:id="@+id/comment_send"
               android:layout_width="50dp"
               android:layout_height="35dp"
               android:layout_margin="5dp"
               android:text="发送"
               android:textSize="13sp"
               android:textColor="@color/white"
               android:background="#B3E5FC"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="15dp"/>
       </RelativeLayout>





   </RelativeLayout>

</LinearLayout>