<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backgroud_title"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_title_name" />

    <RelativeLayout
        android:id="@+id/layout_mine_personal"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/actionsheet_bottom_normal" >



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_ImageView"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="12dp"
            android:src="@mipmap/face_picture"/>

        <TextView
            android:id="@+id/textview_mine_nickNmae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/circle_ImageView"
            android:text="昵称"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/gexing_qianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-37dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/textview_mine_nickNmae"
            android:text="没有个性的个性签名" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/divideBar_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/dividebar" />

    <RelativeLayout
        android:id="@+id/layout_mine_download"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/actionsheet_bottom_normal" >

        <ImageView
            android:id="@+id/pic_1"
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/face_picture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/pic_1"
            android:text="我的创作"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mine_setting"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/actionsheet_bottom_normal" >

        <ImageView
            android:id="@+id/pic_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/face_picture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/pic_2"
            android:text="编辑信息"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mine_weather_Poetry"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/actionsheet_bottom_normal" >

        <ImageView
            android:id="@+id/pic_3"
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/face_picture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/pic_3"
            android:text="天气·诗"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mine_Appabout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/actionsheet_bottom_normal" >

        <ImageView
            android:id="@+id/pic_4"
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/face_picture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/pic_4"
            android:text="关于"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

</LinearLayout>